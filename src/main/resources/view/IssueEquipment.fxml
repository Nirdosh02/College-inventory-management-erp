<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Spinner?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.college.inventoryerp.controller.IssueEquipmentController"
            prefHeight="400.0" prefWidth="750.0">
    <HBox spacing="20.0">
        <children>
            <!-- Issue Equipment Form -->
            <VBox styleClass="form-section" spacing="15.0" HBox.hgrow="ALWAYS">
                <children>
                    <Label styleClass="section-title" text="Issue Equipment" />
                    <GridPane hgap="10.0" vgap="10.0">
                        <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="120.0" />
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            <RowConstraints minHeight="10.0" prefHeight="60.0" vgrow="SOMETIMES" />
                        </rowConstraints>
                        <children>
                            <Label text="Equipment:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                            <ComboBox fx:id="equipmentComboBox" maxWidth="1.7976931348623157E308" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                            <!-- NEW: Department Dropdown -->
                            <Label text="Department:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                            <ComboBox fx:id="departmentComboBox" maxWidth="1.7976931348623157E308" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                            <Label text="Faculty:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                            <ComboBox fx:id="facultyComboBox" maxWidth="1.7976931348623157E308" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                            <Label text="Issued By:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                            <ComboBox fx:id="employeeComboBox" maxWidth="1.7976931348623157E308" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                            <Label text="Issue Date:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                            <DatePicker fx:id="issueDatePicker" maxWidth="1.7976931348623157E308" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                            <Label text="Quantity:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                            <Spinner fx:id="issueQuantityField" editable="true" GridPane.columnIndex="1" GridPane.rowIndex="5" />

                            <Label text="Notes:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
                            <TextArea fx:id="notesTextArea" maxHeight="60.0" prefHeight="60.0" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                            <CheckBox fx:id="chkSendEmail" text="Send Email Confirmation" selected="true" GridPane.columnIndex="1" GridPane.rowIndex="7" />
                        </children>
                    </GridPane>

                    <HBox spacing="10.0">
                        <children>
                            <Button fx:id="issueButton" onAction="#handleIssueEquipment" styleClass="primary-button" text="Issue Equipment" />
                            <Button onAction="#handleRefresh" styleClass="secondary-button" text="Refresh Data" />
                        </children>
                    </HBox>
                </children>
            </VBox>

            <!-- Currently Issued Equipment -->
            <VBox styleClass="table-section" spacing="15.0" HBox.hgrow="ALWAYS">
                <children>
                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                        <children>
                            <Label styleClass="section-title" text="Currently Issued Equipment" />
                            <Button fx:id="returnButton" onAction="#handleReturnEquipment" styleClass="return-button" text="Return Selected" />
                        </children>
                    </HBox>

                    <TableView fx:id="currentIssuesTable" prefHeight="300.0">
                        <columns>
                            <TableColumn fx:id="currentEquipmentColumn" prefWidth="200.0" text="Equipment" />
                            <TableColumn fx:id="currentFacultyColumn" prefWidth="150.0" text="Faculty" />
                            <TableColumn fx:id="currentEmployeeColumn" prefWidth="150.0" text="Issued By" />
                            <TableColumn fx:id="currentIssueDateColumn" prefWidth="90.0" text="Issue Date" />
                            <TableColumn fx:id="currentQuantityColumn" prefWidth="80.0" text="Qty" />
                            <TableColumn fx:id="currentAvailableQuantityColumn" prefWidth="100.0" text="Available Qty" />
                        </columns>
                    </TableView>
                </children>
            </VBox>
        </children>
    </HBox>
</AnchorPane>
