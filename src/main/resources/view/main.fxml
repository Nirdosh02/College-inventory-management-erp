<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.college.inventoryerp.controller.MainController">
    <top>
        <VBox styleClass="header-section" BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="dashboardTitle" styleClass="main-title" text="College Inventory ERP" textAlignment="CENTER">
                    <font>
                        <Font name="Arial Bold" size="24.0" />
                    </font>
                </Label>
                <Label styleClass="subtitle" text="Equipment Tracking &amp; Issue Management Dashboard" textAlignment="CENTER" />
            </children>
            <padding>
                <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
            </padding>
        </VBox>
    </top>

    <center>
        <TabPane fx:id="mainTabPane" styleClass="main-tab-pane" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
            <tabs>
                <!-- Dashboard tab -->
                <Tab styleClass="dashboard-tab" text="Dashboard">
                    <content>
                        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED">
                            <content>
                                <VBox spacing="20.0">
                                    <children>
                                        <!-- Equipment Filter Section (MOVED OUTSIDE GridPane) -->
                                        <HBox spacing="15.0" alignment="CENTER_LEFT" styleClass="filter-section">
                                            <children>
                                                <Label text="Select Equipment:" styleClass="filter-label" />
                                                <ComboBox fx:id="equipmentFilterCombo" prefWidth="220.0" />
                                                <Region HBox.hgrow="ALWAYS"/>
                                                <Button fx:id="refreshEquipmentButton" text="ðŸ”„ Refresh" onAction="#handleRefreshEquipment" styleClass="refresh-button"/>
                                            </children>
                                            <padding>
                                                <Insets bottom="10.0" left="5.0" right="5.0" top="5.0" />
                                            </padding>
                                        </HBox>

                                        <!-- Summary Cards Grid -->
                                        <GridPane hgap="20.0" vgap="15.0" styleClass="summary-grid">
                                            <columnConstraints>
                                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                            </columnConstraints>
                                            <children>
                                                <VBox styleClass="summary-card, equipment-card" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS" alignment="CENTER">
                                                    <children>
                                                        <Label styleClass="card-title" text="Total Equipment" />
                                                        <Label fx:id="totalEquipmentSummary" styleClass="card-value" text="0" />
                                                    </children>
                                                </VBox>
                                                <VBox styleClass="summary-card, available-card" GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS" alignment="CENTER">
                                                    <children>
                                                        <Label styleClass="card-title" text="Available" />
                                                        <Label fx:id="availableEquipmentSummary" styleClass="card-value" text="0" />
                                                    </children>
                                                </VBox>
                                                <VBox styleClass="summary-card, issued-card" GridPane.columnIndex="2" GridPane.rowIndex="0" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS" alignment="CENTER">
                                                    <children>
                                                        <Label styleClass="card-title" text="Currently Issued" />
                                                        <Label fx:id="issuedEquipmentSummary" styleClass="card-value" text="0" />
                                                    </children>
                                                </VBox>
                                                <VBox styleClass="summary-card, maintenance-card" GridPane.columnIndex="3" GridPane.rowIndex="0" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS" alignment="CENTER">
                                                    <children>
                                                        <Label styleClass="card-title" text="In Maintenance" />
                                                        <Label fx:id="maintenanceEquipmentSummary" styleClass="card-value" text="0" />
                                                    </children>
                                                </VBox>
                                            </children>
                                        </GridPane>
                                    </children>
                                    <padding>
                                        <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
                                    </padding>
                                </VBox>
                            </content>
                        </ScrollPane>
                    </content>
                </Tab>

                <!-- NEW: Issue / Return tab (included FXML and its own controller) -->
                <Tab styleClass="issue-tab" text="Issue/Return">
                    <content>
                        <fx:include source="IssueEquipment.fxml" />
                    </content>
                </Tab>

                <!-- Management tabs -->
                <Tab styleClass="equipment-tab" text="Equipment Management">
                    <content>
                        <fx:include source="equipment.fxml" />
                    </content>
                </Tab>

                <Tab styleClass="faculty-tab" text="Faculty Management">
                    <content>
                        <fx:include source="faculty.fxml" />
                    </content>
                </Tab>

                <Tab styleClass="employee-tab" text="Employee Management">
                    <content>
                        <fx:include source="employee.fxml" />
                    </content>
                </Tab>

                <Tab styleClass="reports-tab" text="Reports">
                    <content>
                        <fx:include source="reports.fxml" />
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </center>
</BorderPane>
